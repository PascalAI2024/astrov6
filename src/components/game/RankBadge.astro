---
interface Props {
  rank?: string;
  icon?: string;
  class?: string;
}

const { rank, icon, class: className = '' } = Astro.props;
---

<div class:list={['relative group', className]}>
  <div class="absolute inset-0 bg-gradient-to-br from-cosmic-600/20 to-purple-600/20 rounded-full opacity-0 group-hover:opacity-100 transition-all duration-300"></div>
  
  <div class="relative flex items-center gap-2 px-4 py-2 bg-gray-800/50 rounded-full backdrop-blur-sm">
    <span class="text-2xl">{icon}</span>
    <span class="text-sm font-medium text-white">{rank}</span>
  </div>
</div>
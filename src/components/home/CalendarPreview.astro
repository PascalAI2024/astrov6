---
import Button from '../common/Button.astro';

const upcomingEvents = [
  {
    date: new Date('2024-03-20'),
    title: "March Equinox",
    type: "seasonal",
    description: "Equal day and night as Sun crosses celestial equator"
  },
  {
    date: new Date('2024-04-08'),
    title: "Total Solar Eclipse",
    type: "eclipse",
    description: "Visible across North America"
  },
  {
    date: new Date('2024-04-22'),
    title: "Lyrid Meteor Shower",
    type: "meteor",
    description: "Annual shower with up to 20 meteors per hour"
  }
];
---

<section class="py-12">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="relative">
      <div class="absolute -inset-4 bg-gradient-to-r from-cosmic-600/20 to-purple-600/20 rounded-xl blur-xl opacity-75"></div>
      
      <div class="relative bg-gray-900/50 backdrop-blur-sm rounded-xl border border-white/10 p-8">
        <div class="flex items-center justify-between mb-8">
          <div>
            <h2 class="text-2xl font-bold text-white mb-2">Upcoming Celestial Events</h2>
            <p class="text-gray-400">Mark your calendar for these astronomical phenomena</p>
          </div>
          <Button href="/calendar" variant="outline">View Full Calendar</Button>
        </div>

        <div class="grid md:grid-cols-3 gap-6">
          {upcomingEvents.map(event => (
            <div class="relative group">
              <div class="absolute inset-0 bg-gradient-to-br from-cosmic-600/10 to-purple-600/10 rounded-lg opacity-0 group-hover:opacity-100 transition-all duration-300"></div>
              
              <div class="relative p-6 bg-gray-800/50 rounded-lg backdrop-blur-sm">
                <div class="flex items-center gap-3 mb-4">
                  <div class="text-2xl">
                    {event.type === 'eclipse' ? 'üåë' : 
                     event.type === 'meteor' ? '‚òÑÔ∏è' : 'üåç'}
                  </div>
                  <div class="text-sm text-cosmic-400">
                    {event.date.toLocaleDateString(undefined, {
                      month: 'short',
                      day: 'numeric'
                    })}
                  </div>
                </div>
                
                <h3 class="text-lg font-medium text-white mb-2">
                  {event.title}
                </h3>
                
                <p class="text-sm text-gray-400">
                  {event.description}
                </p>
              </div>
            </div>
          ))}
        </div>
      </div>
    </div>
  </div>
</section>
---

<Layout title="About Cosmic AI">
  <Container>
    <div class="py-16 sm:py-24">
      <!-- Hero Section -->
      <div class="relative mb-24">
        <div class="absolute inset-0">
          <div class="absolute inset-0 bg-gradient-to-r from-cosmic-600/20 to-purple-600/20 rounded-3xl blur-3xl"></div>
        </div>
        
        <div class="relative max-w-3xl mx-auto text-center">
          <h1 class="text-4xl font-bold tracking-tight text-gray-900 dark:text-white sm:text-6xl mb-6">
            About Cosmic AI
          </h1>
          <p class="text-lg leading-8 text-gray-600 dark:text-gray-400 mb-8">
            Exploring the cosmos through the lens of artificial intelligence, making astronomy accessible and engaging for everyone.
          </p>
          
          <!-- Quick Stats -->
          <div class="grid grid-cols-2 md:grid-cols-4 gap-6">
            {stats.map(stat => (
              <div class="relative group">
                <div class="absolute inset-0 bg-cosmic-400/10 rounded-lg blur-xl opacity-0 group-hover:opacity-100 transition-opacity"></div>
                <div class="relative">
                  <div class="text-3xl font-bold text-cosmic-400 mb-1">{stat.value}</div>
                  <div class="text-sm text-gray-500 dark:text-gray-400">{stat.label}</div>
                </div>
              </div>
            ))}
          </div>
        </div>
      </div>

      <!-- Features Grid -->
      <div class="relative mb-24">
        <div class="absolute inset-0">
          <div class="absolute inset-0 bg-gradient-to-b from-cosmic-600/10 to-purple-600/10 rounded-3xl blur-3xl"></div>
        </div>
        
        <div class="relative">
          <h2 class="text-3xl font-bold text-gray-900 dark:text-white text-center mb-12">Core Features</h2>
          <dl class="grid max-w-xl grid-cols-1 gap-x-8 gap-y-16 lg:max-w-none lg:grid-cols-3">
            {features.map((feature) => (
              <div class="relative group">
                <div class="absolute inset-0 bg-gradient-to-br from-cosmic-600/20 to-purple-600/20 rounded-xl opacity-0 group-hover:opacity-100 transition-all duration-300 blur-xl"></div>
                <div class="relative bg-white/5 backdrop-blur-sm rounded-xl p-6 border border-white/10">
                  <dt class="text-base font-semibold leading-7 text-gray-900 dark:text-white">
                    <div class="mb-6 flex h-10 w-10 items-center justify-center rounded-lg bg-cosmic-600">
                      <Fragment set:html={feature.icon} />
                    </div>
                    {feature.name}
                  </dt>
                  <dd class="mt-1 text-base leading-7 text-gray-600 dark:text-gray-400">
                    {feature.description}
                  </dd>
                </div>
              </div>
            ))}
          </dl>
        </div>
      </div>

      <!-- Tech Stack Section -->
      <div class="relative mb-24">
        <div class="absolute inset-0">
          <div class="absolute inset-0 bg-gradient-to-r from-purple-600/10 to-cosmic-600/10 rounded-3xl blur-3xl"></div>
        </div>
        
        <div class="relative">
          <h2 class="text-3xl font-bold text-gray-900 dark:text-white text-center mb-12">Our Technology Stack</h2>
          <div class="grid md:grid-cols-3 gap-8">
            {techStack.map((category) => (
              <div class="relative group">
                <div class="absolute -inset-2 bg-gradient-to-r from-cosmic-600/20 to-purple-600/20 rounded-xl opacity-0 group-hover:opacity-100 blur-xl transition-all duration-300"></div>
                <div class="relative bg-white/5 backdrop-blur-sm p-6 rounded-xl border border-white/10">
                  <div class="flex items-center gap-3 mb-4">
                    <span class="text-2xl">{category.icon}</span>
                    <h3 class="text-xl font-bold text-gray-900 dark:text-white">{category.category}</h3>
                  </div>
                  <ul class="space-y-4">
                    {category.items.map((item) => (
                      <li class="relative group/item">
                        <div class="flex items-center gap-3">
                          <img 
                            src={item.logo} 
                            alt={item.name}
                            class="w-6 h-6 object-contain"
                            width="24"
                            height="24"
                          />
                          <div>
                            <div class="font-medium text-cosmic-600 dark:text-cosmic-400">{item.name}</div>
                            <div class="text-sm text-gray-600 dark:text-gray-400">{item.description}</div>
                          </div>
                        </div>
                      </li>
                    ))}
                  </ul>
                </div>
              </div>
            ))}
          </div>
        </div>
      </div>

      <!-- Team Section -->
      <div class="relative">
        <div class="absolute inset-0">
          <div class="absolute inset-0 bg-gradient-to-b from-cosmic-600/10 to-purple-600/10 rounded-3xl blur-3xl"></div>
        </div>
        
        <div class="relative">
          <h2 class="text-3xl font-bold text-gray-900 dark:text-white text-center mb-12">Our Technology Team</h2>
          <div class="grid grid-cols-1 gap-12 lg:grid-cols-2">
            {team.map((member) => (
              <div class="relative group">
                <div class={`absolute -inset-2 bg-gradient-to-r ${member.bgGradient} rounded-xl opacity-0 group-hover:opacity-20 blur-xl transition-all duration-300`}></div>
                
                <div class="relative flex gap-6 bg-white/5 backdrop-blur-sm p-6 rounded-xl border border-white/10">
                  <img 
                    class="h-24 w-24 rounded-xl object-contain bg-gray-800 p-2"
                    src={member.imageUrl}
                    alt={member.name}
                    width="96"
                    height="96"
                  />
                  <div class="flex-1">
                    <h3 class="text-xl font-bold text-gray-900 dark:text-white mb-1">{member.name}</h3>
                    <p class="text-cosmic-600 dark:text-cosmic-400 text-sm mb-3">{member.role}</p>
                    <p class="text-gray-600 dark:text-gray-400 text-sm mb-4">{member.bio}</p>
                    <div class="flex flex-wrap gap-2">
                      {member.tech.map((tech) => (
                        <span class="px-2 py-1 text-xs font-medium bg-cosmic-100 dark:bg-cosmic-900/30 text-cosmic-800 dark:text-cosmic-200 rounded-full">
                          {tech}
                        </span>
                      ))}
                    </div>
                  </div>
                </div>
              </div>
            ))}
          </div>
        </div>
      </div>
    </div>
  </Container>
</Layout>

<style>
.blur-3xl {
  --tw-blur: blur(64px);
  filter: var(--tw-blur) var(--tw-brightness) var(--tw-contrast) var(--tw-grayscale) var(--tw-hue-rotate) var(--tw-invert) var(--tw-saturate) var(--tw-sepia) var(--tw-drop-shadow);
}
</style>
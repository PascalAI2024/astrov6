---
import Layout from '../layouts/Layout.astro';
import Container from '../components/common/Container.astro';

const categories = [
  {
    name: "Solar System",
    icon: "🌎",
    description: "Test your knowledge about our cosmic neighborhood"
  },
  {
    name: "Black Holes",
    icon: "🕳️",
    description: "Dive into the mysteries of spacetime"
  },
  {
    name: "Galaxies",
    icon: "🌌",
    description: "Explore the vast cosmic structures"
  },
  {
    name: "Space Exploration",
    icon: "🚀",
    description: "Journey through human space achievements"
  }
];
---

<Layout title="Cosmic Trivia">
  <Container>
    <div class="py-16">
      <div class="text-center mb-12">
        <h1 class="text-4xl font-bold text-gray-900 dark:text-white mb-4">
          Cosmic Trivia Challenge
        </h1>
        <p class="text-xl text-gray-600 dark:text-gray-400">
          Test your astronomy knowledge and learn fascinating facts
        </p>
      </div>

      <div class="grid md:grid-cols-2 gap-8 max-w-4xl mx-auto">
        {categories.map(category => (
          <div class="relative group">
            <div class="absolute -inset-2 bg-gradient-to-r from-cosmic-600 to-purple-600 rounded-xl opacity-0 group-hover:opacity-100 transition-all duration-300 blur-xl"></div>
            <a
              href={`#${category.name.toLowerCase().replace(' ', '-')}`}
              class="relative block p-8 bg-white dark:bg-gray-800 rounded-xl shadow-lg hover:transform hover:scale-[1.02] transition-all"
            >
              <div class="flex items-center gap-4">
                <span class="text-4xl">{category.icon}</span>
                <div>
                  <h3 class="text-xl font-bold text-gray-900 dark:text-white mb-2">
                    {category.name}
                  </h3>
                  <p class="text-gray-600 dark:text-gray-400">
                    {category.description}
                  </p>
                </div>
              </div>
            </a>
          </div>
        ))}
      </div>

      <div class="mt-16 text-center">
        <p class="text-gray-600 dark:text-gray-400">
          More categories and questions coming soon!
        </p>
      </div>
    </div>
  </Container>
</Layout>